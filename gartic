		<input type="text" id="tl" placeholder="atilacaq userler" style="width: 380px">
	</div>
	<div id="bb" style="margin-top: 0.5rem;">
		<button onclick="otagagir(document.getElementById('srv').value,document.getElementById('rm').value,document.getElementById('tl').value.split(','))" id="bt">Gir</button>
	</div>
<script>
	let otaqd = [];
	let vaxt;

	let ws = '';

	function otagagir(server, otaq, willbekicked){ 
		ws = new WebSocket(`wss://server0${server}.gartic.io/socket.io/?EIO=3&transport=websocket`);

		ws.onopen = () => {
			ws.send(`42[3,{"v":20000,"nick":"mozart${(Math.floor(Math.random() * 9999))}","avatar":0,"sala":"${otaq}"}]`);
			ws.send(`42[46,1675119253574]`);
		}

		ws.onmessage = (m) => {
			const d = JSON.parse(m.data.slice(2));
			if(d[0] == 5){
				vaxt = d[2];
				otaqd = d[5];
			}
			console.log(willbekicked);
			console.log(otaqd);
			for(let i = 0; i < willbekicked.length; i++){
		 		ws.send(`42[45,${vaxt},["${otaqd.filter(a => a.nick == willbekicked[i])[0].id}",true]]`);
			}
		}
		
		setInterval(() => {
			ws.send(`2`);
		}, 25000);
	}
</script>
